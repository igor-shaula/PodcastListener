<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:layout_marginBottom="@dimen/size_1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        style="@style/MatchMatch.Orient_Vertical"
        android:padding="@dimen/size_2">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/MatchWrap.Gravity_Center"
            android:layout_marginLeft="@dimen/size_2"
            android:layout_marginStart="@dimen/size_2"
            android:text="@string/app_name"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/tvSummary"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/size_2"
            android:layout_marginStart="@dimen/size_2"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvPubDate"
            style="@style/MatchWrap"
            android:layout_marginEnd="@dimen/size_2"
            android:layout_marginRight="@dimen/size_2"
            android:gravity="end"
            android:text="@string/app_name" />

    </LinearLayout>

</android.support.v7.widget.CardView>